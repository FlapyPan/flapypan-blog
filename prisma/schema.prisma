generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model Attribute {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  key   String @unique
  value Json?
}

model Article {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title     String
  path      String   @unique
  cover     String?
  content   String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Access {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  ip        String?
  referrer  String?
  us        String?
  articleId String   @db.ObjectId
  createdAt DateTime @default(now())
}

model Picture {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name  String
  bytes Bytes
}
